{% extends "base.html.jinja" %}

{% block title %}{{ current_class.name }}{% endblock %}
{% block content %}
    <h1>{{ current_class.name }}</h1>
    <p>{{ current_class.description | nl2br }}</p>

    <h2>Характеристики класса</h2>
    <ul>
        <li>Кость хитов: {{ current_class.hit_dice }}</li>
        <li>Хиты на 1 уровне: {{ current_class.hit_points_first }}</li>
        <li>Хиты на следующих уровнях: {{ current_class.hit_points_next }}</li>
        <li>Владение доспехами: {{ current_class.armor_proficiencies }}</li>
        <li>Владение оружием: {{ current_class.weapon_proficiencies }}</li>
        <li>Владение инструментами: {{ current_class.tool_proficiencies }}</li>
        <li>Спасброски: {{ current_class.saving_throws }}</li>
        <li>Навыки: {{ current_class.skills }}</li>
    </ul>

    <h2>Таблица развития класса</h2>
    <table>
        <tr>
            <th>Уровень</th>
            <th>Бонус мастерства</th>
            {% for col in custom_columns %}
                <th>{{ col }}</th>
            {% endfor %}
        </tr>
        {% for row in class_table %}
        <tr>
            <td>{{ row.level }}</td>
            <td>+{{ row.proficiency_bonus }}</td>
            {% for col in custom_columns %}
                <td>{{ row.custom.get(col, '') }}</td>
            {% endfor %}
        </tr>
        {% endfor %}
    </table>

    <h2>Способности класса</h2>
    {% for ability in abilities %}
        <div class="ability">
            <h3>{{ ability.name }} ({{ ability.level }} уровень)</h3>
            <p>{{ ability.description | nl2br }}</p>
        </div>
    {% endfor %}

    {% if can_edit %}
        <div class="edit-buttons">
            <a href="{{ url_for('classes.edit_class', class_id=current_class.id) }}" class="button">Редактировать класс</a>
            <form action="{{ url_for('classes.delete_class', class_id=current_class.id) }}" method="POST" style="display: inline;">
                <button type="submit" class="button delete" onclick="return confirm('Вы уверены?')">Удалить класс</button>
            </form>
        </div>
    {% endif %}

    <h2>Комментарии</h2>
    {% if user %}
        <form action="{{ url_for('classes.add_class_comment', class_id=current_class.id) }}" method="POST" class="comment-form">
            {{ comment_form.csrf_token }}
            <div class="form-group">
                {{ comment_form.text.label }}
                {{ comment_form.text(class="form-control") }}
            </div>
            {{ comment_form.submit(class="button") }}
        </form>
    {% endif %}

    <div class="comments">
        {% for comment in current_class.comments %}
            <div class="comment">
                <div class="comment-header">
                    <span class="comment-author">{{ comment.author.username }}</span>
                    <span class="comment-date">
                        {% if comment.timestamp %}
                            {{ comment.timestamp.strftime('%Y-%m-%d %H:%M') }}
                        {% else %}
                            Дата не указана
                        {% endif %}
                    </span>
                </div>
                <div class="comment-text">
                    {{ comment.text | nl2br }}
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}