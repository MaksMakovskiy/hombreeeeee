{% extends "base.html.jinja" %}

{% block head %}
    <link rel="stylesheet" href="{{ url_for('static', filename='css/auth.css') }}">
{% endblock %}

{% block title %}Обновить профиль{% endblock %}

{% block content %}
<div class="auth-container">
    <div class="auth-card">
        <h2 class="auth-title">Изменение Пароля</h2>
        <p class="auth-subtitle">Защитите свой аккаунт, {{ user.username }}</p>
        
        <form method="POST" class="auth-form">
            {{ form.csrf_token }}
            
            <div class="form-group">
                {{ form.current_password.label(class="form-label") }}
                {{ form.current_password(class="form-input", placeholder="Введите текущий пароль") }}
                {% for error in form.current_password.errors %}
                    <div class="error-message">{{ error }}</div>
                {% endfor %}
            </div>
            
            <div class="form-group">
                {{ form.new_password.label(class="form-label") }}
                {{ form.new_password(class="form-input", placeholder="Введите новый пароль") }}
                {% for error in form.new_password.errors %}
                    <div class="error-message">{{ error }}</div>
                {% endfor %}
            </div>
            
            <div class="form-group">
                {{ form.confirm_new_password.label(class="form-label") }}
                {{ form.confirm_new_password(class="form-input", placeholder="Подтвердите новый пароль") }}
                {% for error in form.confirm_new_password.errors %}
                    <div class="error-message">{{ error }}</div>
                {% endfor %}
            </div>
            
            {{ form.submit(class="auth-button") }}
        </form>
        
        <div class="auth-links">
            <p><a href="{{ url_for('profile.profile') }}">Вернуться к профилю</a></p>
        </div>
    </div>
</div>
{% endblock %}