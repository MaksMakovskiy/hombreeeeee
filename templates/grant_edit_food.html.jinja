{% extends "base.html.jinja" %}

{% block head %}
    <link rel="stylesheet" href="{{ url_for('static', filename='css/forms.css') }}">
{% endblock %}

{% block content %}
<div class="form-container">
    <div class="form-header">
        <h2 class="form-title">Назначение Редактора Провизии</h2>
        <p class="form-subtitle">Выдача прав на "{{ food.name }}"</p>
    </div>
    
    <div class="form-card">
        <form method="POST" class="main-form">
            <div class="form-group">
                <label for="username" class="form-label">Имя пользователя:</label>
                <input type="text" name="username" id="username" class="form-input" placeholder="Введите имя героя" required>
            </div>
            <button type="submit" class="form-button">Выдать Права</button>
        </form>
    </div>
</div>
{% endblock %}
