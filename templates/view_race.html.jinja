{% extends "base.html.jinja" %}
{% block content %}
    <h1>{{ race.name }}</h1>
    {% if race.image_url %}
        <img src="{{ race.image_url }}" alt="Картинка расы" style="max-width:300px;">
    {% endif %}
    <p>{{ race.description | nl2br }}</p>
    {% if can_edit %}
        <a href="{{ url_for('races.edit_race', race_id=race.id) }}" class="button">Редактировать расу</a>
        <a href="{{ url_for('races.grant_edit_race', race_id=race.id) }}" class="button">Выдать права на редактирование</a>
    {% endif %}
    <h2>Умения расы</h2>
    {% for ab in abilities %}
        <div class="ability">
            <h3>{{ ab.name }}</h3>
            <p>{{ ab.description | nl2br }}</p>
        </div>
    {% endfor %}
{% endblock %}
